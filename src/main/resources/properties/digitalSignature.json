[
  {
    title: '@@digital.signature.title@@',
    properties : [
      {
        name : 'id',
        label : '@@digital.signature.id@@',
        type : 'textfield',
        required: 'True',
        regex_validation : '^[a-zA-Z0-9_]+$',
        validation_message : '@@digital.signature.invalidId@@'
      },
      {
        name : 'label',
        label : '@@digital.signature.label@@',
        type : 'textfield',
        value : 'Digital Signature'
      }
    ]
  },
  {
    title: '@@digital.signature.advancedOptions@@',
    properties: [
      {
        label : '@@digital.signature.dataSource@@',
        type : 'header'
      },
      {
        name : 'optionsBinder',
        label : '@@form.selectbox.chooseOptionsBinder@@',
        type : 'elementselect',
        options_ajax : '[CONTEXT_PATH]/web/property/json/getElements?classname=org.joget.apps.form.model.FormLoadOptionsBinder',
        url : '[CONTEXT_PATH]/web/property/json[APP_PATH]/getPropertyOptions'
      },
      {
        name : 'fileField',
        description : '@@digital.signature.filefield.desc@@',
        label : '@@digital.signature.filefield.value@@',
        required : 'True',
        type : 'textfield'
      },
      {
        name : 'username',
        description : '@@digital.signature.username.desc@@',
        label : '@@digital.signature.username.value@@',
        required : 'True',
        type : 'textfield'
      }
    ]
  }
]