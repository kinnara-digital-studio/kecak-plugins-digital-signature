[
  {
    "title": "@@digital.signature.title@@",
    "properties" : [
      {
        "name" : "id",
        "label" : "@@digital.signature.id@@",
        "type" : "textfield",
        "required": "True",
        "regex_validation" : "^[a-zA-Z0-9_]+$",
        "validation_message" : "@@digital.signature.invalidId@@"
      },
      {
        "name" : "label",
        "label" : "@@digital.signature.label@@",
        "type" : "textfield",
        "value" : "Digital Signature"
      }
    ]
  },
  {
    "title": "@@digital.signature.advancedOptions@@",
    "properties": [
      {
        "label" : "@@digital.signature.dataSource@@",
        "type" : "header"
      },
      {
        "name": "stampType",
        "label": "@@digital.signature.stampType@@",
        "type": "radio",
        "value": "signature",
        "options": [
          {
            "value": "signature",
            "label": "@@digital.signature.stampType.signature@@"
          },
          {
            "value": "qrCode",
            "label": "@@digital.signature.stampType.qrCode@@"
          }
        ]
      },
      {
        "name": "qrContent",
        "label": "@@digital.signature.qrContent@@",
        "type": "codeeditor",
        "required": "true",
        "control_field": "stampType",
        "control_value": "qrCode"
      }
    ]
  }
]