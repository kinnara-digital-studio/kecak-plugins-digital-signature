[
  {
    "title": "@@digital.signature.title@@",
    "properties" : [
      {
        "name" : "id",
        "label" : "@@digital.signature.id@@",
        "type" : "textfield",
        "required": "True",
        "regex_validation" : "^[a-zA-Z0-9_]+$",
        "validation_message" : "@@digital.signature.invalidId@@"
      },
      {
        "name" : "label",
        "label" : "@@digital.signature.label@@",
        "type" : "textfield",
        "value" : "Digital Signature"
      }
    ]
  },
  {
    "title": "@@digital.signature.stampSettings@@",
    "properties": [
      {
        "label" : "@@digital.signature.stamp@@",
        "type" : "header"
      },
      {
        "name": "stampType",
        "label": "@@digital.signature.stampType@@",
        "type": "radio",
        "value": "signature",
        "options": [
          {
            "value": "",
            "label": "@@digital.signature.stampType.none@@"
          },
          {
            "value": "signature",
            "label": "@@digital.signature.stampType.signature@@"
          },
          {
            "value": "qrCode",
            "label": "@@digital.signature.stampType.qrCode@@"
          }
        ]
      },
      {
        "name": "qrContent",
        "label": "@@digital.signature.qrContent@@",
        "type": "codeeditor",
        "required": "true",
        "control_field": "stampType",
        "control_value": "qrCode"
      }
    ]
  },
  {
    "title": "Certificate Attributes",
    "properties" : [
      {
        "label" : "Subject",
        "type" : "header"
      },
      {
        "name": "organizationalUnit",
        "label": "@@digital.signature.organizationalUnit@@",
        "description": "@@digital.signature.organizationalUnit.desc@@",
        "type": "textfield"
      },
      {
        "name": "organization",
        "label": "@@digital.signature.organization@@",
        "description": "@@digital.signature.organization.desc@@",
        "type": "textfield"
      },
      {
        "name": "locality",
        "label": "@@digital.signature.locality@@",
        "description": "@@digital.signature.locality.desc@@",
        "type": "textfield"
      },
      {
        "name": "stateOrProvince",
        "label": "@@digital.signature.stateOrProvince@@",
        "description": "@@digital.signature.stateOrProvince.desc@@",
        "type": "textfield"
      },
      {
        "name": "country",
        "label": "@@digital.signature.country@@",
        "description": "@@digital.signature.country.desc@@",
        "type": "textfield"
      },
      {
        "label" : "@@digital.signature.fields@@",
        "type" : "header"
      },
      {
        "name": "reason",
        "label": "@@digital.signature.reason@@",
        "description": "@@digital.signature.reason.desc@@",
        "type": "textfield"
      }
    ]
  },
  {
    "title": "Advance",
    "properties" : [
      {
        "name": "override",
        "label": "@@digital.signature.override@@",
        "description": "@@digital.signature.override.desc@@",
        "type": "checkbox",
        "value" : "true",
        "options" : [{ "value" : "true", "label" : ""}]
      }
    ]
  }
]